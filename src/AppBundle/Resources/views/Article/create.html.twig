{% extends 'AppBundle:Dashboard:dash.html.twig' %}

{% block dash_content %}
<div class="container padding-top">

    {# Back Button #}
    <div class="row">
        <div class="col-xs-12">
            <a class="btn btn-large btn-primary" href="{{ path('dashboard') }}">
                <i class="fa fa-backward"></i>
                Powrót
            </a>
        </div>
    </div>

    {# Input form #}
    <div class="row">
        <div class="col-xs-12">
            <form action="" method="post" class="form-horizontal" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="article_name" class="control-label col-sm-2 col-xs-12">Nazwa</label>
                    <div class="col-xs-12 col-sm-10">
                        <input type="text" class="form-control" id="article_name" name="{{ form.title.vars.full_name }}" value="{{ form.title.vars.value }}"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="article_description" class="control-label col-sm-2 col-xs-12">Opis</label>
                    <div class="col-xs-12 col-sm-10">
                        <textarea name="{{ form.description.vars.full_name }}" id="article_description" cols="30" rows="10" class="form-control">{{ form.description.vars.value }}</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label for="article_thumbnails" class="control-label col-sm-2 col-xs-12">Dodaj miniaturę</label>
                    <div class="col-sm-10 col-xs-12">
                        <input type="file" id="article_thumbnails">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12 col-sm-10 col-sm-offset-2">
                        <button type="submit" class="btn btn-success">Zapisz</button>
                        <button type="reset" class="btn btn-danger">Anuluj</button>
                    </div>
                </div>
                {{ form_row(form._token) }}
            </form>
        </div>
    </div>


</div>
{% endblock %}